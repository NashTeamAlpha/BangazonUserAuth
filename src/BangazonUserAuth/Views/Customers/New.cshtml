@model BangazonUserAuth.ViewModels.NewCustomerViewModel

@{
    ViewData["Title"] = "Join BangazonUserAuth";
}
<hr>
<h2>@ViewData["Title"]</h2>

<form asp-controller="Customers" asp-action="New" method="post">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Customer.FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Customer.LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit"  class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>